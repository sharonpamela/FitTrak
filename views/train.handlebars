<!-- Creates the Overall Grid -->
<div class="wrapper">
    <div class="logo">
        <h1> FitTraker </h1>
    </div>

    <div class="logout">
        <a href="#">Log out</a>
    </div>

    <div class="title">
        <h1 class="fitplan-name">Current Program: {{fitplan_name.[0].fitplan_name}} </h1>
        <h2 class="fitplan-day"> Day {{curr_day.[0].day_number}} - {{curr_day.[0].day_name}}</h2>
        <br>
        <h4 class="info-num-exer">Total exercises: {{fitplan_info.[0].info_num_exer}}</h4>
        <h4 class="info-time">Completion time in mins: {{fitplan_info.[0].info_time}}</h4>
        <h4 class="info-equipment">Gym equipment needed: {{fitplan_info.[0].info_equipment}}</h4>
    </div>

    <div class="exerciseDiv">
        <div>
            {{#each completed_exer_entries}}
            <h3>Exercise {{exer_seq}}: {{exer_name}}</h3>
                {{#each sets_list}}
                    <div  data-id={{set_id}}>
                        <form class="set">
                            <label>Set {{set_seq}}:</label>
                            {{rep_num}} reps
                            <button class="removeButton edit" data-id={{set_id}} type="button" value="Edit">Edit</button>
                            <button class="removeButton remove" data-id={{set_id}} type="button" value="Remove">Remove</button><br>
                        </form>
                    </div>
                {{/each}}
                <div class="appendSetDiv" data-id={{exer_seq}}></div>
                <button class="whiteTransButton add-set" type="button" value={{exer_seq}}>Add Set</button><br>
                <br>
            {{/each}}
            <br>
        </div>

        <div class="optionButtons">
            <span><button class="whiteTransButton startStop-button" type="button" data-workingout=false value="Start workout">Start workout</button>
                &nbsp;</span>
            <span><button class="whiteTransButton exit-button" type="button" data-workingout=false value="Exit">Exit</button></span>
        </div>
    </div>

  


